generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}

// ===== Enums =====
enum AuthProvider {
  EMAIL
  GOOGLE
}

enum ProtectionMethod {
  NONE
  PASSWORD
}

enum NotificationType {
  PUSH
  EMAIL
}

enum VerificationTokenType {
  EMAIL_VERIFY
  PASSWORD_RESET
}

// ===== Models =====

// Table: users
model User {
  id              String   @id @default(uuid())
  email           String   @unique
  isEmailVerified Boolean  @default(false)
  emailVerifiedAt DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deletedAt       DateTime?

  // Relations
  urls               Url[]
  notifications      Notification[]
  user_auth          UserAuth[]
  session            Session[]
  verification_token VerificationToken[]

  @@map("users")
}

// Table: user_auth
model UserAuth {
  id           String        @id @default(uuid())
  userId       String
  email        String        
  authProvider AuthProvider  
  providerId   String?       
  password     String?       // password hash (for EMAIL provider)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  lastSignInAt DateTime      @default(now())
  meta         Json?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_auth")
  @@index([userId])
  @@unique([authProvider, providerId])
  @@unique([email, authProvider])
}

// Table: sessions
model Session {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique // Refresh token
  userAgent String?
  ip        String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  revokedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
  @@index([expiresAt])
}

// Table: verification_token
model VerificationToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique
  type      VerificationTokenType   // 'EMAIL_CONFIRM', 'PASSWORD_RESET', etc.
  data      Json?
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
  @@index([userId])
  @@index([expiresAt])
}

// Table: urls
model Url {
  id                 BigInt           @id @default(autoincrement())
  shortId            String           @unique
  longUrl            String
  ownerId            String?          // FK to users.id
  protectionMethod   ProtectionMethod @default(NONE)
  protectedPassword  String?          // password hash (if PASSWORD protection)
  isUrlSFW           Boolean          @default(true) // Show page before redirecting only if isUrlSFW is false.
  isAnalyticsEnabled Boolean          @default(true)
  // NOTE: app should set now()+5d / now()+6mo as needed
  expiresAt          DateTime
  renewAt            DateTime         @default(now())
  totalClicks        BigInt           @default(0)
  totalSuccessClicks BigInt           @default(0)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  meta               Json?

  // Relations
  owner       User?          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  analytics   UrlAnalytics[]

  @@index([ownerId])
  @@index([expiresAt])
  @@map("urls")
}

// Table: url_analytics
model UrlAnalytics {
  clickId    String            @id @default(uuid())
  urlId      BigInt
  isSuccess  Boolean           @default(false)
  ipAddress  String            // hashed IP stored as string
  methodUsed ProtectionMethod  @default(NONE)
  createdAt  DateTime          @default(now())
  meta       Json?

  // Relations
  url Url @relation(fields: [urlId], references: [id], onDelete: Cascade)

  @@index([urlId])
  @@index([createdAt])
  @@map("url_analytics")
}

// Table: notifications
model Notification {
  notificationId   String           @id @default(uuid())
  userId           String
  notificationType NotificationType
  notificationBody String
  isSuccess        Boolean          @default(false)
  createdAt        DateTime         @default(now())
  clickedAt        DateTime?
  readAt           DateTime?
  deletedAt        DateTime?
  updatedAt        DateTime         @updatedAt
  meta             Json?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("notifications")
}
