{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend (Dev Container)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--enable-source-maps",
        "--watch",
        "--import",
        "tsx"
      ],
      "args": ["src/server.ts"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
